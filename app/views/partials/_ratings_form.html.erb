
<% if current_user %>

<div class="container">
  <form method="POST" action="/ratings" id="ratings-form">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input type="hidden" id="movie_id" name="rating[movie_id]" value="<%=@movie.id%>">
    <input type="hidden" name="rating[user_id]" value="<%=current_user.id%>">
    <div class="form-group row">
      <label for="review" class="col-sm-2 col-form-label">Description:</label>
      <div class="col-sm-10">
        <input name="rating[review]" class="form-control" id="reviewtextarea" placeholder="Review (Optional). Click Deserved Number of Bells to Submit">
      <span id="ratingHelpBlock" class="form-text text-muted">Max 5 Words!</span>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10 bell-ratings">
        <button type="submit" name="rating[value]" value="1" class="bell-button block fa fa-bell-o fa-2x fa-fw vote-bell shake-rotate"></button>
        <button type="submit" name="rating[value]" value="2" class="bell-button block fa fa-bell-o fa-2x fa-fw vote-bell shake-rotate"></button>
        <button type="submit" name="rating[value]" value="3" class="bell-button block fa fa-bell-o fa-2x fa-fw vote-bell shake-rotate"></button>
        <button type="submit" name="rating[value]" value="4" class="bell-button block fa fa-bell-o fa-2x fa-fw vote-bell shake-rotate"></button>
        <button type="submit" name="rating[value]" value="5" class="bell-button block fa fa-bell-o fa-2x fa-fw vote-bell shake-rotate"></button>
        <br>
      </div>
    </div>
  </form>
</div>




<% else %>
  <p class="center">You must be logged in to review this movie.</p>
<% end %>