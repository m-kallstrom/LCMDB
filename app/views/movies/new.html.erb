<h2>Add a New Movie</h2>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<% if @errors %>
  <%= render partial: "/partials/errors", locals: {errors: @errors} %>
<% end %>

<div class="container">
  <form method="POST" action="/movies/confirm">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <div class="form-group row">
      <label for="title" class="col-sm-2 col-form-label">Title:</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="movie[title]">
      </div>
    </div>
    <div class="form-group row">
      <label for="year" class="col-sm-2 col-form-label">Year:</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="movie[year]">
        <p id="yearHelpBlock" class="form-text text-muted">(Optional)</p>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-success">Search!</button>
      </div>
    </div>
  </form>
</div>

