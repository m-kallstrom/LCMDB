<h2><%= @movie.title %></h2>

<ul>
  <li>Year:  <%= @movie.year  %></li>
  <li>Main Actors:  <%= @movie.actors  %></li>
  <li>Plot:  <%= @movie.plot  %></li>
  <br>
  <li>IMDB Rating:  <%= @movie.imdb_rating  %></li>
  <li>Rotten Tomatoes Rating:  <%= @movie.rotten_tomatoes_rating  %></li>
  <li><strong>Lorenzini Rating:  <%= @movie.lorenzini_rating  %></li></strong>
</ul>

<h3> Rate this movie </h3>
  <div class="ratings">

    <form class="rating" method="POST" action="/ratings">
      <input type="text" name="rating[review]" placeholder="Optional: Write a Short Review Here and then Click Thumbs Up or Thumbs Down to Submit">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <input type="hidden" name="rating[movie_id]" value="<%=@movie.id%>">
      <input type="hidden" name="rating[user_id]" value="<%=current_user.id%>">
      <button type="submit" name="rating[value]" value="1" class="qvote block fa fa-thumbs-o-up upvote-button"></button>
      <button type="submit" name="rating[value]" value="-1" class="block fa fa-thumbs-o-down downvote-button"></button>
    </form>
  </div>

<h3>Ratings for This Movie</h3>
<ul>
  <% if @movie.ratings %>
    <% @movie.ratings.each do |rating| %>
      <li><strong><%= rating.user.username %></strong> says:
      <% if rating.value >= 1 %>
       thumbs up! </li>
      <% else %>
        thumbs down! </li>
      <% end %>
    <li><%= rating.review %></li>
    <br>
    <% end %>
  <% else %>
    There are no ratings yet :(
  <% end %>
</ul>
