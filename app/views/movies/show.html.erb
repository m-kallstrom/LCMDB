<h2><%= @movie.title %></h2>

<ul>
<div class=" col-sm-11">
  <li class="fa fa-snowflake-o">&ensp;<strong>Lorenzini Rating:</strong>
    <% @movie.lorenzini_rating.times do %>
      <span class= "fa fa-bell"></span>
    <% end %>
    <% empty_stars = 5 - @movie.lorenzini_rating %>
    <% empty_stars.times do %>
      <span class="fa fa-bell-o"></span>
      <% end %>
    </li>
  <br><li class="fa fa-snowflake-o">&ensp;<strong>Year:</strong>  <%= @movie.year  %></li>
  <br><li class="fa fa-snowflake-o">&ensp;<strong>Main Actors:</strong>  <%= @movie.actors  %></li>
  <br><li class="fa fa-snowflake-o">&ensp;<strong>IMDB Rating:</strong>  <%= @movie.imdb_rating  %></li>
  <br><li class="fa fa-snowflake-o">&ensp;<strong>Rotten Tomatoes Rating:</strong>  <%= @movie.rotten_tomatoes_rating  %></li>
  <br><li class="fa fa-snowflake-o">&ensp;<strong>Plot:</strong>  <span class="plot"><%= @movie.plot  %></span></li>
  <br>
  </div>
</ul>

<h3> Rate this movie </h3>
  <div class="ratings">
    <%= render partial: "/partials/ratings_form" %>
    <% if @errors %>
      <%= render partial: "/partials/errors", locals: {errors: @errors} %>
    <% end %>
    <% if flash[:notice] %>
      <ul>
        <li><%= flash[:notice] %></li>
      </ul>
    <% end %>
  </div>

<h3>Ratings for This Movie</h3>
<div class="flex flex-column col-sm-11">
<ul class="list" id="ratings-list">
  <% if @movie.ratings.empty? %>
    There are no ratings yet :(
  <% else %>
      <%= render partial: "/partials/ratings", layout: false %>
  <% end %>
</ul>
</div>

<% if admin_user %>
  <%= link_to 'Delete this movie?',  movie_path(@movie),
    data: { confirm: 'Are you sure?' }, method: :delete %>
<% end %>
